<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--闪屏页-->
    <style name="AppTheme.StartingWindowTheme" parent="AppTheme">
        <!--也可以设置成一张图片 -->
        <item name="android:windowBackground">@drawable/img_splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--仿苹果加载中小菊花-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景不变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--首页底部导航-->
    <style name="HomePageButtonLL">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>

    </style>


    <style name="videoDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--更新Dialog-->
    <style name="MillionDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!--全屏透明dialog 阻止点击事件-->
    <style name="TransparentWindowBg">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="HomePageButtonIV">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="HomePageButtonTV">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--按钮点击效果-->
    <style name="ItemClickEffect">
        <item name="android:background">@drawable/click_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="GrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_page</item>
    </style>

    <style name="GrayLineWide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/gray_page</item>
    </style>
    <!--创建企业-->
    <style name="CompanyCreateLL">
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CompanyCreateStart">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textColor">@color/red_start</item>
        <item name="android:text">@string/icon_start</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CompanyCreateET">
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CommonDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CommonCompanyDialog">
        <item name="android:backgroundDimEnabled">true</item><!--activity变暗-->
    </style>

    <style name="alphAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <style name="fromBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_entry_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_leave_from_bottom</item>
    </style>

    <style name="sendButtonAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_entry_from_right</item>
        <item name="android:windowExitAnimation">@anim/anim_leave_to_right</item>
    </style>

    <style name="CommonButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_common</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="CommonShowLayout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">14dp</item>


    </style>

    <style name="ButtonBottom">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_common_color_change</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ButtonBottomParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="queryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--TabLayout中文字的大小-->
    <style name="MyTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>
    <!--Activity样式dialog-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 边框 -->
<!--        <item name="android:windowFrame">@null</item>-->
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 不透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="hotizontalRvBtn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@drawable/bg_solid_gary_light_100dp</item>
        <item name="android:gravity">center</item>
         <item name="android:paddingStart">4dp</item>
         <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">12sp</item>


        <item name="android:textColor">@color/black_text</item>
    </style>
</resources>