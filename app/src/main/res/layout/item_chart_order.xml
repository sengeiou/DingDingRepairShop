<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mChartTextParentLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mChartTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="60dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="17:08"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/mHeaderLeftCV"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="9dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mHeaderLeftIV"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/df" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/mChartContentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="66dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mErrorIV"
                android:layout_width="30dp"
                android:layout_height="46dp"
                android:paddingHorizontal="5dp"
                android:src="@drawable/icon_resend" />

            <RelativeLayout
                android:id="@+id/mOrderParentRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chart_right"
                android:padding="7dp">

                <TextView
                    android:id="@+id/mOrderNumberTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/mOrderTimeTV"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="订单号:31231231232132"
                    android:textColor="@color/black_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/mOrderTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:text="03-01 8:00"
                    android:textColor="@color/black_text"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/mOrderDetailLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mOrderTimeTV"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/chart_left"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <com.android.ctgapp.common.CommonRecyclerView
                        android:id="@+id/mOrderDetailRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp" />

                    <View style="@style/GrayLine" />

                    <TextView
                        android:id="@+id/mOrderText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="end"
                        android:singleLine="true"
                        android:text="共15件,实付$450.00"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mOrderBuyerTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mOrderDetailLL"
                    android:layout_marginTop="4dp"
                    android:text="下单人:赵云"
                    android:textColor="@color/black_text"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/mOrderStatusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mOrderDetailLL"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:text="已完成"
                    android:textColor="@color/black_text"
                    android:textSize="10sp" />

            </RelativeLayout>


            <!--        <TextView-->
            <!--            android:id="@+id/mChartTextTV"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:background="@drawable/chart_right"-->
            <!--            android:gravity="center_vertical"-->
            <!--            android:minHeight="46dp"-->
            <!--            android:paddingHorizontal="10dp"-->
            <!--            android:paddingVertical="8dp"-->
            <!--            android:text="@string/app_name"-->
            <!--            android:textColor="#333333" />-->
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/mHeaderRightCV"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mHeaderRightIV"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/df" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/mIsRedTV"
        android:layout_marginEnd="60dp"
        android:textSize="10sp"
        android:layout_gravity="end"
        android:text="已读"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>