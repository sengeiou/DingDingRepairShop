<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_page"
    tools:context=".activity.mine.team.InviteUserToTeamActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mTitle="企业邀请码" />

    <TextView
        android:id="@+id/mCode"
        android:textStyle="bold"
        android:textColor="@color/black_text"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black_text"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="被邀请人点击注册,选择加入企业,点击邀请码,输入即可"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<Space
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    />
  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="horizontal">


          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/mConfirmBTN"
              android:layout_width="match_parent"
              android:layout_height="34dp"
              android:layout_marginHorizontal="12dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="30dp"
              android:background="@drawable/bg_btn_common"
              android:text="复制"
              android:textColor="@color/white" />
      </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>