<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.mine.company.CompanyIntroActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mTitle="企业简介" />

   <RelativeLayout
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">
       <EditText
           android:maxLength="200"
           android:id="@+id/mIntroET"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:background="@color/white"
           android:gravity="start"
           android:padding="10dp"
           android:textColor="@color/black"
           android:hint="请填写企业简介"
           android:textSize="14sp" />
       <View
           android:layout_marginHorizontal="12dp"
           android:layout_below="@id/mIntroET"
           android:background="#FF598FFE"
           android:layout_width="match_parent"
           android:layout_height="0.5dp"/>
   </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/mConfirmBTN"
            style="@style/CommonButton"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/confrim" />

    </RelativeLayout>

</LinearLayout>