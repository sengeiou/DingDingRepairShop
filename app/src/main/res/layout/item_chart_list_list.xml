<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mParentRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:id="@+id/mImageViewCV"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="900dp"
        app:cardElevation="0dp">
        <!---头像-->
        <ImageView
            android:id="@+id/mImageHeaderIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_page"
            android:scaleType="centerCrop"
            android:src="@drawable/df"
            android:contentDescription="@string/app_name" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mMegCountTV"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/mImageViewCV"
        android:background="@drawable/bg_btn_red_circel"
        android:gravity="center"
        android:text="99"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/mImageViewCV">

        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_solid_white_circel"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mOnLineIV"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_btn_red_circel"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>


    <TextView
        android:id="@+id/mTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_toStartOf="@id/mLastTimeTV"
        android:layout_toEndOf="@id/mImageViewCV"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="车同轨客服"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mLastTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:text="星期二"
        android:textColor="#98999A" />

    <TextView
        android:id="@+id/mContentTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mLastTimeTV"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/mImageViewCV"
        android:enabled="true"
        android:singleLine="true"
        android:text="最新的一条消息"
        android:textColor="#777777"
        android:textSize="13sp" />

    <View
        android:id="@+id/mBottomLine"
        style="@style/GrayLine"
        android:layout_below="@id/mContentTV"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/mImageViewCV" />

</RelativeLayout>