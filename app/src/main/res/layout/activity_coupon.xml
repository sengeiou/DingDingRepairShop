<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.home.shop.CouponActivity">

    <RelativeLayout
        android:id="@+id/mTitleBarRL"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/mBackIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:src="@drawable/icon_back_black" />

        <TextView
            android:id="@+id/mTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="40dp"
            android:ellipsize="end"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="选择代金券"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mConfigTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingStart="40dp"
            android:paddingTop="50dp"
            android:paddingEnd="12dp"
            android:text="确定"
            android:textColor="@color/red_dark"
            android:textSize="12sp" />
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/mCanUseLL"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/mCanUseTV"
                android:paddingVertical="10dp"
                android:text="可用优惠券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/mCanUseV"
                android:background="@color/colorAccent"
                android:layout_width="50dp"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mCanNotUseLL"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mCanNotUseTV"
                android:paddingVertical="10dp"
                android:text="不可用优惠券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="invisible"
                android:id="@+id/mCanNotUseV"
                android:background="@color/blue_common"
                android:layout_width="50dp"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mCouponRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>