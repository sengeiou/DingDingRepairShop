<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mDeleteIV"
        android:layout_width="36dp"
        android:layout_height="56dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:src="@drawable/icon_minus_circel" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:layout_marginEnd="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右前翼子板"
            android:textColor="@color/black_text" />

        <LinearLayout
            android:id="@+id/m4SLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4S店参考价格:"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:text="$100"
                android:textColor="#FFFF4B00"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OE号:"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mOENumberTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="60211SW"
                android:textColor="@color/colorAccent"
                android:textSize="11sp"
                android:visibility="gone" />

            <EditText
                android:digits="@string/CheckWordAndNum"
                android:id="@+id/mOENumberET"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_border_gray_solid_white_radius3_light"
                android:ellipsize="end"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/mMinusBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:background="#F1F2F3"
                android:gravity="center"
                android:text="-" />
        </FrameLayout>

        <TextView
            android:id="@+id/mGoodsCountTV"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="#F7F7F7"
            android:gravity="center"
            android:text="1" />

        <FrameLayout
            android:id="@+id/mAddBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:background="#ddddde"
                android:gravity="center"
                android:text="+" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>