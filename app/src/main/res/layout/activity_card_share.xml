<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.message.chart.card.DingDingContactShareActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mTitle="选择联系人" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mContactTL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/colorAccent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.android.ctgapp.widget.EditTextWithDeleteBtn
            android:id="@+id/mSearchET"
            android:imeOptions="actionSearch"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text_common"
            android:hint="输入关键字"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </FrameLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mContactViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/mSingleLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mConfirmBTN"
            style="@style/CommonButton"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="确认" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mMoreRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="17dp"
        android:paddingTop="21dp"
        android:paddingEnd="0dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/selectedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选择:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mSelectCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/selectedTV"
            android:text="0人"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/mMoreConfirmBTN"
            style="@style/CommonButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="21dp"
            android:text="确认" />
    </RelativeLayout>
</LinearLayout>