<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mParentLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/mItemCB"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <ImageView
            android:id="@+id/mItemImageIV"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/df" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mPartNamesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="大灯"
                android:textColor="#333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mPartCodeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="编码:2333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mPartPriceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:text="¥120"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mExceptionGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_sold_out"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="3dp"
                    android:text="已下架"
                    android:textColor="@color/sold_out"
                    android:textSize="12sp" />

                <!--增减-->
                <LinearLayout
                    android:id="@+id/mChangeCountLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/mMinusBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="0dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="20dp"
                            android:background="#F1F2F3"
                            android:gravity="center"
                            android:text="-" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/mGoodsCountTV"
                        android:layout_width="33dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:background="#F7F7F7"
                        android:gravity="center"
                        android:text="1" />

                    <RelativeLayout
                        android:id="@+id/mAddBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="20dp"
                            android:background="#ddddde"
                            android:gravity="center"
                            android:text="+" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/GrayLine"
        android:layout_marginHorizontal="10dp" />
</LinearLayout>