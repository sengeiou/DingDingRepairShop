<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp">

    <CheckBox
        android:id="@+id/mCheckBox"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical" />

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/df" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mPartNameTV"
            android:layout_width="156dp"
            android:layout_height="32dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="玛吉斯 185/65R 汽车轮胎"
            android:textColor="#202020"
            android:textSize="12sp" />

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/mPartTypeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MUS00-76312312312312312312312312312312312312312"
            android:textColor="#9B9B9B"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/red_start"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mPartPriceTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="55"
                android:textColor="@color/red_start"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
    <!--增减-->
    <LinearLayout
        android:id="@+id/mChangeCountLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/mMinusBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:background="#F1F2F3"
                android:gravity="center"
                android:text="-" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mGoodsCountsTV"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="#F7F7F7"
            android:gravity="center"
            />

        <RelativeLayout
            android:id="@+id/mAddBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:background="#ddddde"
                android:gravity="center"
                android:text="+" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>