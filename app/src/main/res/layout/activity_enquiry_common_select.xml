<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.home.enquiry.EnquiryCommonSelectActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:id="@+id/mAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.android.ctgapp.common.CommonRecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
<!--    <Space-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_height="0dp"/>-->
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mConfirmBTN"
            style="@style/CommonButton"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/confrim" />
    </RelativeLayout>

</LinearLayout>