<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.home.enquiry.VinSearchHistoryActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mTitle="最近用过" />

    <RelativeLayout
        android:id="@+id/mTestRL"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <ImageView
            android:padding="5dp"
            android:id="@+id/mImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/abcc" />

        <TextView
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:id="@+id/mCarInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mImageView"
            android:text="宝马 320i 2010 2.0 手自一体" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/mVinCodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCarInfoTV"
            android:layout_toEndOf="@id/mImageView"
            android:text="WBAPG5104CF220441" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/mEndTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCarInfoTV"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red_start"
            android:text="体验专用" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/mHistoryRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.appcompat.widget.LinearLayoutCompat>