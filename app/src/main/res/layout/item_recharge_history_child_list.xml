<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:background="@color/white"
    android:paddingTop="14dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:src="@drawable/df" />

    <TextView
        android:id="@+id/mMoney"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="+1000" />

    <TextView
        android:id="@+id/mEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toStartOf="@id/mMoney"
        android:layout_toEndOf="@id/mImageView"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="充值-王二"
        android:textColor="@color/black_text" />

    <TextView
        android:id="@+id/mRemark"
        android:layout_toStartOf="@id/mMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mEvent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/mImageView"
        android:text="备注"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mRemark"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/mImageView"
        android:text="2020年12月12日"
        android:textSize="12sp" />

    <View
        style="@style/GrayLine"
        android:layout_below="@id/mTime"
        android:layout_marginStart="56dp"
        android:layout_marginTop="5dp" />
</RelativeLayout>