<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.other.GuidePageActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mPoint1"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/point2" />

        <ImageView
            android:id="@+id/mPoint2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/point1" />

        <ImageView
            android:id="@+id/mPoint3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/point1" />

        <ImageView
            android:id="@+id/mPoint4"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/point1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="85" />


        <Button
            android:id="@+id/mGoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btn_common"
            android:minHeight="@null"
            android:paddingStart="80dp"
            android:paddingTop="5dp"
            android:paddingEnd="80dp"
            android:paddingBottom="5dp"
            android:text="进入"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15" />


    </LinearLayout>
</RelativeLayout>