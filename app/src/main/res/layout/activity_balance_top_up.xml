<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.mine.balance.BalanceTopUpActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mTitle="余额充值" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="9dp"
        android:paddingVertical="7dp"
        android:text="请选择充值金额"
        android:textColor="@color/black_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="7dp">

        <Button
            android:id="@+id/mMoney1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_border_3"
            android:text="1,000"
            android:textColor="@color/black_text" />

        <Button
            android:id="@+id/mMoney2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_border_3"
            android:text="2,000"
            android:textColor="@color/black_text" />

        <Button
            android:id="@+id/mMoney3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_border_3"
            android:text="3,000"
            android:textColor="@color/black_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/mMoney5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_border_3"
            android:text="5,000"
            android:textColor="@color/black_text" />

        <Button
            android:id="@+id/mMoney8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_border_3"
            android:text="8,000"
            android:textColor="@color/black_text" />

        <Button
            android:id="@+id/mMoney10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gray_border_3"
            android:text="10,000"
            android:textColor="@color/black_text" />
    </LinearLayout>

    <View style="@style/GrayLineWide" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingHorizontal="9dp"
        android:paddingVertical="8dp"
        android:text="充值金额"
        android:textColor="@color/black_text"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:paddingStart="10dp"
            android:paddingTop="13dp"
            android:text="¥"
            android:textColor="@color/black_text"
            android:textSize="39sp" />

        <EditText
            android:maxLength="20"
            android:id="@+id/mCurrentMoneyET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="39sp" />
    </LinearLayout>


    <View
        style="@style/GrayLine"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="13dp" />

    <View style="@style/GrayLineWide" />

    <LinearLayout
        android:id="@+id/mWeChatLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="11dp"
            android:src="@drawable/icon_wechat" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信"
            android:textColor="@color/black_text"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/mWeChatCB"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleX="0.7"
            android:scaleY="0.7" />
    </LinearLayout>

    <View
        style="@style/GrayLine"
        android:layout_marginHorizontal="10dp" />

    <LinearLayout
        android:id="@+id/mAliPayLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="9dp"
            android:layout_marginVertical="11dp"
            android:src="@drawable/icon_alipay" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付宝"
            android:textColor="@color/black_text"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/mAliPayCB"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleX="0.7"
            android:scaleY="0.7" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_page" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/mConfirmBTN"
            style="@style/CommonButton"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="确认充值" />
    </RelativeLayout>

</LinearLayout>