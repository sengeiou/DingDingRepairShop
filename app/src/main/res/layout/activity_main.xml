<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/mFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         />

<!--    <androidx.viewpager.widget.ViewPager-->
<!--        android:id="@+id/mFragmentViewPager"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mHomeLL"
            style="@style/HomePageButtonLL"
            android:paddingVertical="5dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/mHomeIV"
                style="@style/HomePageButtonIV"
                android:contentDescription="@string/app_name"
                android:src="@drawable/tab_home_selector" />

            <TextView
                android:id="@+id/mHomeTV"
                style="@style/HomePageButtonTV"
                android:layout_height="wrap_content"
                android:text="@string/home_page"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mMessageLL"
            style="@style/HomePageButtonLL"
            android:paddingVertical="5dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/mMessageIV"
                style="@style/HomePageButtonIV"
                android:contentDescription="@string/app_name"
                android:src="@drawable/tab_msg_selector" />

            <TextView
                android:id="@+id/mMessageTV"
                style="@style/HomePageButtonTV"
                android:text="@string/message" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mWorkLL"
            style="@style/HomePageButtonLL"
            android:paddingVertical="5dp"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/mWorkIV"
                style="@style/HomePageButtonIV"
                android:contentDescription="@string/app_name"
                android:src="@drawable/tab_work_selector" />

            <TextView
                android:id="@+id/mWorkTV"
                style="@style/HomePageButtonTV"
                android:text="@string/work" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mDealLL"
            style="@style/HomePageButtonLL"
            android:paddingVertical="5dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/mDealIV"
                style="@style/HomePageButtonIV"
                android:contentDescription="@string/app_name"
                android:src="@drawable/tab_transaction_selector" />

            <TextView
                android:id="@+id/mDealTV"
                style="@style/HomePageButtonTV"
                android:text="@string/deal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mMineLL"
            style="@style/HomePageButtonLL"
            android:paddingVertical="5dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/mMineIV"
                style="@style/HomePageButtonIV"
                android:contentDescription="@string/app_name"
                android:src="@drawable/tab_my_selector" />

            <TextView
                android:id="@+id/mMineTV"
                style="@style/HomePageButtonTV"
                android:text="@string/mine" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>