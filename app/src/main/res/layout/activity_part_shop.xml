<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.shop.PartShopActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mBackIV"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/icon_arrow_left_gray" />

            <com.android.ctgapp.widget.EditTextWithDeleteBtn
                android:id="@+id/mSearchET"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text_common"
                android:hint="商品/规格/编号/VIN"
                android:imeOptions="actionSearch"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/mScanIV"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:paddingVertical="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:src="@drawable/icon_scan_blue" />

            <ImageView
                android:id="@+id/mTrolleyIV"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:paddingVertical="3dp"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:src="@drawable/icon_trolly_new" />
        </LinearLayout>

        <View style="@style/GrayLineWide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--左侧菜单-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mMenuRV"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/gray_page"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--筛选排序-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mLinshi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingVertical="3dp"
                            android:text="分类"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/mArrowIV"
                            android:layout_width="14dp"
                            android:layout_height="11dp"
                            android:layout_marginStart="2dp"
                            android:src="@drawable/ic_arrow_grey_down" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/mAllSoftBTN"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="综合排序"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:background="#E5E5E5" />

                    <RelativeLayout
                        android:id="@+id/mSortSalesRL"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/mSortSalesTV"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingVertical="3dp"
                            android:text="销量"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/mSaleIV"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/mSortSalesTV"
                            android:paddingVertical="13dp"
                            android:src="@drawable/icon_sort_up"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:background="#E5E5E5" />

                    <RelativeLayout
                        android:id="@+id/mPriceRL"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/mSortPriceTV"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingVertical="3dp"
                            android:text="价格"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/mPriceIV"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/mSortPriceTV"
                            android:paddingVertical="13dp"
                            android:src="@drawable/icon_sort_up"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:background="#E5E5E5"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/mShai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/mScreenTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingVertical="3dp"
                            android:text="筛选"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/mScreenTV"
                            android:src="@drawable/icon_screen" />
                    </RelativeLayout>

                </LinearLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mBrandBTN"
                        style="@style/hotizontalRvBtn"
                        android:text="品牌" />

                    <TextView
                        android:id="@+id/mCategoryBTN"
                        style="@style/hotizontalRvBtn"
                        android:text="分类"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mAttrHorizontalRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <!--横向品牌分类菜单-->

                <View style="@style/GrayLine" />

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/mRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.scwang.smartrefresh.layout.header.ClassicsHeader
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mGoodsRV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:paddingBottom="20dp" />

                    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!--抽屉-->
    <!--        android:layout_gravity="end"-->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="40dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/mBottomButtonLL">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="品牌"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mPinPaiRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mFenLeiTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="分类"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mFenLeiRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mOtherAttrDrawRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <View
            style="@style/GrayLine"
            android:layout_above="@id/mBottomButtonLL" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mBottomButtonLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/mResetBTN"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_gray_border"
                android:text="重置" />

            <Button
                android:id="@+id/mConfirmBTN"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_common"
                android:text="确定(0件商品)"
                android:textColor="@color/white" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>