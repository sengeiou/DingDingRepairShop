<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="12dp"
    android:paddingTop="10dp">

    <Button
        android:id="@+id/mPayBTN"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_btn_gray_circle"
        android:text="立即还款"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mSelectCountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已选0笔" />

    <TextView
        android:layout_toEndOf="@id/mSelectMoneyBeforeTV"
        android:id="@+id/mSelectMoneyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mSelectCountTV"
        android:text="0"
        android:textColor="#FFFF4040" />

    <TextView
        android:paddingHorizontal="2dp"
        android:id="@+id/mSelectMoneyBeforeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mSelectCountTV"
        android:layout_toEndOf="@id/mSelectTV"
        android:text="¥"
        android:textColor="#FFFF4040" />

    <TextView
        android:id="@+id/mSelectTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mSelectCountTV"
        android:text="已选总额:"
        android:textColor="@color/black_text" />

</RelativeLayout>