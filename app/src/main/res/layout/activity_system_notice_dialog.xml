<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".activity.other.SystemNoticeDialogActivity"
    android:layout_height="match_parent"
   >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_solid_whit_radius5dp"
        android:orientation="vertical"
        android:padding="12sp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="10sp"
            android:text="系统通知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mTitleTV"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:text="我是大标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mContantTV"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="我是通知内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_solid_red_radius5dp"
                android:text="取消"
                android:id="@+id/mCancelBTN"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/mCheckBTN"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_solid_blue_radius5dp"
                android:text="查看"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_marginTop="200dp"
        android:id="@+id/mOutSide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>