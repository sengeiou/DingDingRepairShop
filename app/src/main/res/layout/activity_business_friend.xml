<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mGroupSettingDL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    tools:context=".activity.mine.friend.BusinessFriendActivity">
    <!--内部菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.ctgapp.widget.CustomTitleBar
                android:id="@+id/mTitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mTitle="商友" />

            <TextView
                android:id="@+id/mAddFriendTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingStart="30dp"
                android:paddingTop="40dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="添加商友" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mSearchLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <com.android.ctgapp.widget.EditTextWithDeleteBtn
                android:id="@+id/mSearchET"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text_common"
                android:hint="输入关键字搜索"
                android:paddingStart="20dp"
                android:paddingEnd="3dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/mSearchGroupIV"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                android:src="@drawable/screen" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mGroupRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mFriendRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:overScrollMode="never" />
    </LinearLayout>

    <!--抽屉-->
    <!--

    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="40dp"
                android:text="选择分组"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/mItemSaveTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="20dp"
                android:paddingTop="45dp"
                android:paddingBottom="5dp"
                android:text="@string/save"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="默认分组"
            android:textColor="@color/black" />

        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/mFixGroupRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="用户分组"
            android:textColor="@color/black" />

        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/mCustomGroupRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>