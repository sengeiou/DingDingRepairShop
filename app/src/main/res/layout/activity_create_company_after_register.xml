<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    tools:context=".activity.login.CreateOrJoinCompanyActivity">


    <!--顶部卡片布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:background="@drawable/img_mine_card_bg">

        <RelativeLayout
            android:id="@+id/mChangeUserInfoRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/niceImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/icon_default_head"
                app:civ_border_color="@color/white"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:id="@+id/nameLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/niceImageView"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                tools:ignore="RelativeOverlap,UseCompoundDrawables">

                <TextView
                    android:id="@+id/mUserNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朱朱"
                    android:textColor="@color/white"
                    android:textSize="21sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/mPhoneNumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameLL"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/niceImageView"
                android:text="1333333333"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/card_yellow_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/text_1_selector"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:text="暂无职位"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mCompanyNameLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mAddressLL"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/mCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无公司信息"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/SwitchingEnterprises_iv"
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/switch_c" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mAddressLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ad" />

            <TextView
                android:id="@+id/mAddressTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:text="暂无公司地址"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

    <!--没有企业-->
    <LinearLayout
        android:id="@+id/mNoCompanyLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/mCreateCompanyLL"
                style="@style/ItemClickEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/icon_create_company" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="创建企业"
                    android:textColor="@color/tv3"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="7dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/backs" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/click_bg"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/mJoinCompanyLL"
                style="@style/ItemClickEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/icon_join_company" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="加入企业"
                    android:textColor="@color/tv3"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="7dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/backs" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mDriverCV"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/click_bg"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:id="@+id/mImDriverLL"
                style="@style/ItemClickEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/icon_im_driver" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="我是车主"
                    android:textColor="@color/tv3"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="7dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/backs" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:textColor="@color/black_text"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示:"
            android:textSize="10sp" />
        <TextView
            android:layout_marginTop="4dp"
            android:paddingHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您目前还没有修理厂企业，请先创建或加入企业，才能使用该APP的其他功能"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
