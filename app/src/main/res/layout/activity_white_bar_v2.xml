<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.mine.whitebar.WhiteBarV2Activity">

    <RelativeLayout
        android:id="@+id/mBackground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/mBackIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:src="@drawable/icon_back_black" />

        <TextView
            android:id="@+id/mTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="40dp"
            android:ellipsize="end"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="挂账账单"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mCreditCompanyIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/mDealFlowIV"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_white_bar_left_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授信企业"
                android:textColor="@color/colorAccent"
                android:textSize="8sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mDealFlowIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/mDealFlowIV"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_white_bar_right_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易流水"
                android:textColor="@color/colorAccent"
                android:textSize="8sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mTopTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="18dp"
                android:text="待还款总额(元)"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mWaitPayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mTopTV"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="28sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/mUnTopTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="18dp"
                android:text="未出账总额(元)"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mUnAccountMoneyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mUnTopTV"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <Button
                android:id="@+id/mPrepaymentBTN"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_below="@id/mUnAccountMoneyTV"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_solid_white_circel"
                android:text="提前还款"
                android:textColor="@color/colorAccent"
                android:textSize="10sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mWhiteBarRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!--底部立即还款按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:visibility="gone">

        <Button
            android:id="@+id/mPayBTN"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_gray_circle"
            android:enabled="false"
            android:text="立即还款"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mSelectCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="已选0笔" />

        <TextView
            android:id="@+id/mSelectMoneyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSelectCountTV"
            android:layout_toEndOf="@id/mSelectMoneyBeforeTV"
            android:text="0"
            android:textColor="#FFFF4040" />

        <TextView
            android:id="@+id/mSelectMoneyBeforeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSelectCountTV"
            android:layout_toEndOf="@id/mSelectTV"
            android:paddingHorizontal="2dp"
            android:text="¥"
            android:textColor="#FFFF4040" />

        <TextView
            android:id="@+id/mSelectTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mSelectCountTV"
            android:layout_marginStart="12dp"
            android:text="已选总额:"
            android:textColor="@color/black_text" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>