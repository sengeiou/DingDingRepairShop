<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/gray_page"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/mParentRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/mStartView"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_common" />

        <TextView
            android:id="@+id/mIndexTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_border_gray_circle"
            android:gravity="center"
            android:minWidth="12dp"
            android:minHeight="12dp"
            android:paddingHorizontal="2dp"
            android:text="1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/mTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/mIndexTV"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="啊实打实大所多大萨达所大所多"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>