<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:fitsSystemWindows="true"
    tools:context=".activity.message.chart.CurrentChartActivity">

    <RelativeLayout
        android:id="@+id/mTitleBarRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/mBackIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:src="@drawable/icon_back_black"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/mCompanyNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:text="朱忠强优先公司" />

        <TextView
            android:id="@+id/mTalkToNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mCompanyNameTV"
            android:layout_centerHorizontal="true"
            android:text="周润发"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mTitleBarRL"
        android:fillViewport="true"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--stackFromEnd 从下方添加新Item-->


            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/mChartRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/mBottomLL"
                android:layout_marginBottom="0dp"
                android:overScrollMode="never"
                app:stackFromEnd="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_above="@id/mBottomLL"
                android:background="@drawable/shadow_black_bottom2top"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/mBottomLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mVoiceIconTV"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:padding="16dp"
                        android:src="@drawable/voice" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:maxLength="50"
                            android:maxLines="4"
                            android:id="@+id/mET"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_edit_text_common"
                            android:hint="在这里输入聊天内容"
                            android:paddingStart="14dp"
                            android:paddingEnd="40dp"
                            android:textSize="14sp" />

                        <TextView

                            android:id="@+id/mVoiceTV"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:background="@drawable/bg_edit_text_common"
                            android:gravity="center"
                            android:hint="按住 说话"
                            android:paddingStart="14dp"
                            android:paddingEnd="40dp"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/mFaceButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:paddingVertical="9dp"
                            android:src="@drawable/icon_smile_chart" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/mAddIV"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:padding="16dp"
                        android:src="@drawable/add_group" />

                    <Button
                        android:id="@+id/mSendTV"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/bg_btn_common_3dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="发送"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </LinearLayout>
                <!--表情布局-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mFaceRV"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone" />
                <!--都功能布局-->
                <LinearLayout
                    android:id="@+id/mFunctionLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mTakePhotoTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="拍照"
                            app:drawableTopCompat="@drawable/icon_pthot_chart" />

                        <TextView
                            android:id="@+id/mOpenPhotoTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="相册"
                            app:drawableTopCompat="@drawable/icon_image_chart" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="车型"
                            app:drawableTopCompat="@drawable/icon_car_chart" />

                        <TextView
                            android:id="@+id/mFunctionOrderBTN"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="订单"
                            app:drawableTopCompat="@drawable/icon_order_chart" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/mCardTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="分享名片"
                            app:drawableTopCompat="@drawable/icon_card_chart" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <!--语音播放时候显示的话筒-->
    <com.ilike.voicerecorder.widget.VoiceRecorderView
        android:id="@+id/mVoiceDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.view.MP3RecordView
        android:layout_centerInParent="true"
        android:id="@+id/viewRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>