<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mCardParentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mUserImageIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/defaulthead" />

        <TextView
            android:id="@+id/mUserImageTextIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_common"
            android:gravity="center"
            android:text="å¸…"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mUserNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/mPhoneNumTV"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:text="@string/test_phone" />
        </LinearLayout>



        <ImageView
            android:id="@+id/mEditTV"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:src="@drawable/icon_edit"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/GrayLine" />

</LinearLayout>