<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mParentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/df" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mCompanyNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无锡泽润物流"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mFirstTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_company_icon"
                    android:paddingHorizontal="8dp"
                    android:text="制造商"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/mSecondTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_company_icon"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:text="日产"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/mPhoneNumTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/test_phone" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/mHeadNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朱忠强负责"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <View style="@style/GrayLine" />

</LinearLayout>