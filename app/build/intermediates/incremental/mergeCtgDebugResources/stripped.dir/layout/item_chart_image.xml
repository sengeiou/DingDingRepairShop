<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mChartTextParentLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/mChartTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="60dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="17:08" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/mHeaderLeftCV"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="9dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mHeaderLeftIV"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/df" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/mChartContentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="66dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mErrorIV"
                android:layout_width="30dp"
                android:layout_height="46dp"
                android:paddingHorizontal="5dp"
                android:src="@drawable/icon_resend" />

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/mChartImage"
                android:layout_width="162dp"
                android:layout_height="100dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/mHeaderRightCV"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/mHeaderRightIV"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="centerCrop"
                android:src="@drawable/df" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/mIsRedTV"
        android:layout_marginEnd="60dp"
        android:textSize="10sp"
        android:layout_gravity="end"
        android:text="已读"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>