<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mParentLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="0dp"
    android:paddingTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:padding="1dp"
            android:background="@color/gray_page"
            android:id="@+id/mImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/df" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/mPartDetailTV"
            android:textSize="12sp"
            android:text="@string/app_name"
            android:textColor="#202020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#FF6637"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mPartPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:textColor="#FF6637"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/mPayedCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售 |"
                android:textSize="12sp"
                tools:ignore="SmallSp" />
            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/mStockTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:ignore="SmallSp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存"
                android:textSize="12sp"
                tools:ignore="SmallSp" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/mWarehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/mAddTrolleyIV"
                android:text="青岛直供仓"
                android:textSize="9dp" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/mAddTrolleyIV"
                android:paddingHorizontal="10dp"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_trolly_new"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>