<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mParentLL"
    android:orientation="vertical">

    <LinearLayout
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mItemImageIV"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/df" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mPartNamesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="大灯"
                android:textColor="#333" />


            <TextView
                android:id="@+id/mPartCodeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="编码:2333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mPartPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lines="1"
                android:text="¥120"
                android:textColor="@color/black_text"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mContentTV"
            android:textColor="#989898"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x3" />


    </LinearLayout>

    <View
        style="@style/GrayLine"
        android:layout_marginHorizontal="10dp" />
</LinearLayout>