<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    tools:context=".activity.home.enquiry.EPCActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:id="@+id/mAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/mSearchRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mAppBar"
        android:background="@color/gray_page">

        <com.android.ctgapp.widget.EditTextWithDeleteBtn
            android:id="@+id/mSearchET"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_solid_white_circel"
            android:hint="请输入OE号搜索"
            android:imeOptions="actionSearch"
            android:paddingStart="40dp"
            android:paddingEnd="3dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/icon_epc_search" />
    </RelativeLayout>
    <!--中间两个列表-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mBottomMenuRL"
        android:layout_below="@id/mSearchRL">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mEpcMenuRV"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mEpcRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp" />

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--底部菜单-->
    <RelativeLayout
        android:id="@+id/mBottomMenuRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mSelectedLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_select_count" />

            <TextView
                android:id="@+id/SelectTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选中"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/mSelectCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-42dp"
                android:background="@drawable/bg_btn_red_circel"
                android:gravity="center"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:paddingHorizontal="2dp"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <Button
            android:id="@+id/mGoEnquireBTN"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_btn_common"
            android:text="去询价"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>