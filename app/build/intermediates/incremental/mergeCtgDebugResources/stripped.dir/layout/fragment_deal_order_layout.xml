<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray_page"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mAllBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mSelect="true"
            app:mText="全部" />

        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mWaitPayBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="待付款" />

        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mWaitSendBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="待发货" />

        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mWaitGetBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="待收货" />

        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mFinishedBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="已完成" />

        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mSalesReturnBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="退货中" />
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mOrderRV"
            android:background="@color/gray_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>