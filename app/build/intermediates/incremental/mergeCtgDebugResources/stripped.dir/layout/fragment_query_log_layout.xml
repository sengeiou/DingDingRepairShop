<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mAllBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mSelect="true"
            app:mText="全部" />
        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mWaitQueryBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="待报价" />
        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mQueriedBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="已报价" />
        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mFinishBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="已完成" />
        <com.android.ctgapp.widget.SelectButton
            android:id="@+id/mExceedBTN"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:mText="已过期" />


    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mQueryRV"
            android:background="@color/gray_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>