<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.mine.client.AddClientActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.ctgapp.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="添加供应商" />

        <TextView
            android:id="@+id/mAuthCodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="30dp"
            android:paddingTop="42dp"
            android:paddingEnd="14dp"
            android:paddingBottom="10dp"
            android:text="邀请码" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.android.ctgapp.widget.EditTextWithDeleteBtn
            android:id="@+id/mSearchET"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text_common"
            android:hint="输入关键字搜索"
            android:imeOptions="actionSearch"
            android:paddingStart="20dp"
            android:paddingEnd="3dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.android.ctgapp.common.CommonRecyclerView
        android:id="@+id/mHorizontalMenuRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <TextView
        android:id="@+id/mTotalClientTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:layout_marginStart="9dp"
        android:text="共位客户"
        android:textColor="#989898"
        android:textSize="12sp" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <com.android.ctgapp.common.CommonRecyclerView
            android:id="@+id/mClientRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>