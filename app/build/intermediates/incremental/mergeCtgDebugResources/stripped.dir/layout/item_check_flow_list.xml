<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="12dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:background="@drawable/bg_solid_whit_radius5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mCompanyNameTV"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W企业" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mFromTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="白条"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mMoneyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="+$65" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mOrderTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/mTimeTV"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="asdasdasdas"
            android:textSize="9sp" />

        <TextView
            android:textSize="9sp"
            android:id="@+id/mTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1009" />

    </RelativeLayout>


</LinearLayout>