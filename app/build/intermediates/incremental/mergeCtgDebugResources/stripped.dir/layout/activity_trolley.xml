<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.home.shop.TrolleyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.android.ctgapp.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mTitle="购物车" />

        <TextView
            android:id="@+id/mManagerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="20dp"
            android:paddingTop="45dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="管理"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

    </RelativeLayout>
    <!--地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <com.yanzhenjie.recyclerview.SwipeRecyclerView
        android:id="@+id/mTrolleyRV"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/mAllSelectCB"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="全选"
            android:textSize="12sp" />

        <!--总金额-->
        <LinearLayout
            android:id="@+id/mTotalPriceLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="合计:"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="¥"
                android:textColor="@color/red_start"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mTotalPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/red_start"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mQuickCleanTV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="快速清理"
            android:textColor="@color/red_start"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/mConfirmBTN"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_common"
            android:text="结算"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/mDeleteBTN"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_gray_border"
            android:text="删除"
            android:textColor="@color/gray_text"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>