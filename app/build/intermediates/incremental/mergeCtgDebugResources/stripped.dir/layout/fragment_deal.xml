<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mQueryLogTV"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:background="@drawable/bg_btn_gray_border_left"
                android:gravity="center"
                android:text="询价记录"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />

            <TextView
                android:background="@drawable/bg_btn_blue_radius_center"
                android:gravity="center"
                android:text="订单"
                android:textColor="@color/white"
                android:id="@+id/mDealOrderTV"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mAfterSaleTV"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:background="@drawable/bg_btn_gray_border_right"
                android:gravity="center"
                android:text="售后"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

    <View
        style="@style/GrayLine"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:id="@+id/mFragmentContainerFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>