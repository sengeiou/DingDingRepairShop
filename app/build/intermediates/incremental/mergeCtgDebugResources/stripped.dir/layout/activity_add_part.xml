    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.android.ctgapp.widget.EditTextWithDeleteBtn
            android:id="@+id/mSearchET"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text_common"
            android:hint="输入关键字搜索"
            android:imeOptions="actionSearch"
            android:paddingStart="20dp"
            android:paddingEnd="3dp"
            android:singleLine="true"
            android:layout_toStartOf="@id/mEPC"
            android:textSize="14sp" />

        <Button
            android:id="@+id/mEPC"
            android:layout_width="38dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_btn_common_3dp"
            android:text="EPC"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--已选配件-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mCurrentPartCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="已选0个配件"
                android:textColor="@color/black_text"
                android:textSize="12sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mContainerLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="常用配件"
                android:textColor="@color/black_text"
                android:textSize="12sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mPartRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/mCustomTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="自定义"
                android:textColor="@color/black_text"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/gray_text_light"
                android:visibility="gone"
                android:id="@+id/mCustomTV"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_btn_gray_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:minWidth="100dp"
                android:paddingHorizontal="20dp"
                android:singleLine="true"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>
