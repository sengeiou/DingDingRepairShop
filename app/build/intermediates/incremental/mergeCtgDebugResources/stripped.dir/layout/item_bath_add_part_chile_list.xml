<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/mParentLL"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mParentRL"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_blue_border_radius_5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mPartIV"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:contentDescription="@string/app_name"
            android:padding="6dp" />

        <ImageView
            android:id="@+id/mSelectedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_corner_right" />


    </RelativeLayout>

    <TextView
        android:id="@+id/mPartNameTV"
        android:layout_marginVertical="6dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左前翼子板" />
</LinearLayout>
