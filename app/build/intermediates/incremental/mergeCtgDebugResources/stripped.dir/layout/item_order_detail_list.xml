<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/df" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mPartNameTV"
            android:layout_width="156dp"
            android:layout_height="32dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="玛吉斯 185/65R 汽车轮胎"
            android:textColor="#202020"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mPartTypeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MUS00-76"
            android:textColor="#9B9B9B"
            android:textSize="11sp" />

        <LinearLayout
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/red_start"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mPartPriceTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="55"
                android:textColor="@color/red_start"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mPartCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/mReturnCountTV"
                android:layout_marginStart="8dp"
                android:textColor="@color/red_dark"
                android:text="退2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
