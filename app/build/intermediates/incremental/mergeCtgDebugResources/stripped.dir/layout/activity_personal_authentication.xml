<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.mine.setting.PersonalAuthenticationActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mTitle="个人认证" />

    <LinearLayout
        style="@style/CommonShowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名" />

        <EditText
            android:maxLength="10"
            android:hint="请输入姓名"
            android:id="@+id/mRealNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:gravity="end"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/CommonShowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号" />

        <EditText
            android:inputType="textEmailSubject"
            android:maxLength="18"
            android:digits="@string/CheckIdCardNum"
            android:hint="前请输入身份证号码"
            android:id="@+id/mCardNumberET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:gravity="end"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:text="上传身份证图片" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingBottom="13dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/mLeftImageView"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:src="@drawable/img_id_card_b"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/mRightImageView"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
            android:src="@drawable/img_id_card_a"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

    <ImageView
        android:id="@+id/mStatusIV"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="end"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/icon_personal_authentication"
        android:visibility="gone" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/mConfirmBTN"
            style="@style/CommonButton"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="提交" />

    </RelativeLayout>
</LinearLayout>