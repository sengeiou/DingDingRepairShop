<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/gray_page"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/mParentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/img_coupon_left"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_marginBottom="1dp"
                        android:id="@+id/mCouponNameHeadTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_common"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="代金券"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/mCouponNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="XXX代金券"
                        android:textColor="@color/black_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/mUseTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:text="1990.11.20 00:00:00 - 2019.12.22 00:00:00"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">
                    <TextView
                        android:singleLine="true"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/mCtgnumTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="部分品类适用"
                        android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_height="0dp">

                    <TextView
                        android:singleLine="true"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:id="@+id/mCouponBrandTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="部分自营商品适用"
                        android:textSize="11sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">
                    <TextView
                        android:singleLine="true"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/mCouponWayTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="部分自营商品适用"
                        android:textSize="11sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mHeadLL"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/img_coupon_right"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mMoneyUsedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="26sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mRuleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="满10000可用"
                    android:textColor="@color/white"
                    android:textSize="9sp" />
                <TextView
                    android:id="@+id/mLeftAmountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="剩0"
                    android:textColor="@color/white"
                    android:textSize="9sp" />
                <RelativeLayout
                    android:id="@+id/mButtonRL"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/mButtonTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_btn_white"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="3dp"
                        android:text="立即使用"
                        android:textColor="#4781FE"
                        android:textSize="9sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/mDetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="-10dp"
            android:layout_gravity="center"
            android:src="@mipmap/im_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="订单号"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="变动金额"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="使用人"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="使用时间"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mChildCouponRV"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>