<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_marginEnd="8dp"
        android:layout_width="72dp"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/mImageView"
            android:src="@drawable/df"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:id="@+id/mPartNameTV"
            android:textColor="#202020"
            android:text="玛吉斯 185/65R 汽车轮胎"
            android:textSize="12sp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_width="156dp"
            android:layout_height="32dp"/>
        <TextView
            android:id="@+id/mPartTypeTV"
            android:textSize="11sp"
            android:text="MUS00-76"
            android:textColor="#9B9B9B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red_start"
                android:textSize="11sp"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mPartPriceTV"
                android:textColor="@color/red_start"
                android:textSize="17sp"
                android:text="55"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/mPartCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="1"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>