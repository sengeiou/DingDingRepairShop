        android:background="@drawable/bg_company_icon"
        android:paddingHorizontal="10dp"
        android:paddingVertical="1dp"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="10sp" />
</LinearLayout>