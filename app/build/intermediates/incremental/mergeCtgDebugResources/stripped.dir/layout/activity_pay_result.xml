<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    tools:context=".activity.home.shop.PayResultActivity">

    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="390dp" />


    <ImageView
        android:layout_width="278dp"
        android:layout_height="226dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/icon_card_bank" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="283dp"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付成功" />

    <View
        android:id="@+id/mBlueLine"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="338dp"
        android:background="@drawable/bg_btn_blue_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mBlueLine"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="-8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/mPayPriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="¥ 325.00"
            android:textColor="#00D107"
            android:textSize="39sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_dash_line" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/mOrderNumberLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mOrderNumberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="WD123444654"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/mOrderTimeLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单时间"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mOrderTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="2020-10-22 12:00:00" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mPayWayTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="微信支付" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付金额"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mPayPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="¥ 325.00" />
        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/mCheckOrderBTN"
            style="@style/CommonButton"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="返    回" />
    </RelativeLayout>
</RelativeLayout>