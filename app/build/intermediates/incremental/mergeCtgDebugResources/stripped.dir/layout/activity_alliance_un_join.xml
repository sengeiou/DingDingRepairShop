<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_page"
    android:orientation="vertical"
    tools:context=".activity.mine.alliance.AllianceCanJoinActivity">

    <com.android.ctgapp.widget.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mTitle="加入联盟" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.android.ctgapp.widget.EditTextWithDeleteBtn
            android:id="@+id/mSearchET"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text_common"
            android:hint="请输入搜索内容"
            android:imeOptions="actionSearch"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>


    <com.android.ctgapp.common.CommonRecyclerView
        android:id="@+id/mAllianceRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />


</LinearLayout>