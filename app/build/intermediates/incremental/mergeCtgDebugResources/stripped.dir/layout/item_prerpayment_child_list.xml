<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mParentLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/bg_card_view"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:paddingVertical="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <CheckBox
            android:id="@+id/mCheckBox"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleX="0.7"
            android:scaleY="0.7" />

        <RelativeLayout
            android:id="@+id/mBaseRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mArrowIV"
            android:layout_toEndOf="@id/mCheckBox">

            <TextView
                android:id="@+id/mOrderNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="采购订单:sssss"
                android:textSize="12sp" />

            <View
                android:id="@+id/mLine"
                style="@style/GrayLine"
                android:layout_below="@id/mOrderNoTV"
                android:layout_marginVertical="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mLine"
                android:text="还款金额"
                android:textColor="@color/black_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mMoneyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mLine"
                android:layout_alignParentEnd="true"
                android:text="1231231"
                android:textColor="@color/black_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:id="@+id/mArrowIV"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:src="@drawable/icon_arrow_right_gray" />
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>